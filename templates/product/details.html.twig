{% extends 'base.html.twig' %}
{% block title %}Product List{% endblock %}
{% block stylesheets %}
     {{ parent() }}
    {{ encore_entry_link_tags('product_details') }}
{% endblock %}
{% block body %}
<div class="container">
{% for message in app.flashes('prod_comments_sucess') %}
            <div class="alert alert-success" style="text-align:center;">
                {{ message }}
            </div>
        {% endfor %}
		<form name="user_comments" method="post">
		<div class="card">
			<div class="container-fliud">
				<div class="wrapper row">
					<div class="preview col-md-6">
						
						<div class="preview-pic tab-content">
						  <div class="tab-pane active" id="pic-1"><img src="{{ asset('uploads/brochures/' ~ product.FileName) }}" /></div>
						</div>
						
					</div>
					<div class="details col-md-6">
						<h3 class="product-title">{{product.name}}</h3>
						<div class="rating">
							<div class="stars">
								<span class="fa fa-star checked"></span>
								<span class="fa fa-star checked"></span>
								<span class="fa fa-star checked"></span>
								<span class="fa fa-star"></span>
								<span class="fa fa-star"></span>
							</div>
							
						</div>
						<p class="product-description">{{product.description}}</p>
						<h4 class="price">current price: <span>${{product.price}}</span></h4>
						<div class="action">
							<button type="submit" name="add_to_cart" class="add-to-cart btn btn-default" value="add_to_cart">add to cart</button>
							
						</div>
						
					</div>
				</div>
			</div>
		</div>
		<div class="card">
			<div class="container-fliud">
				<div class="wrapper row">
				
				
				   <div class="form-group mt-12">
                    <h3>Add Product comments</h3>
                    <textarea class="form-control" name="product_comment" id="quickReplyFormComment" rows="5" columns="8"></textarea>

                    <div class=" ml-30 mt-30">
                        <button class="btn btn-info btn-sm mt-10" type="submit">Post</button>
                    </div>
					</div>
					
				</div>
			</div>
		</div>
		
		<div class="card">
			<div class="container-fliud">
			<div class="wrapper row">
					<div class="col-md-8">
						 <div class="page-header" style="border-bottom: 1px solid #3c763d;">
                    <h1> Comments </h1>
                  </div>
				  <div class="comments-list">
                       
                    {% if comments%}
						{% for comment in comments %}
						<div class="media mt-3">
                            <div class="media-body">
                              <h4 class="media-heading user_name">{{comment.createdBy}}</h4>
                              {{comment.comment}}
                            </div>
						</div>
							{% endfor %}
							{% else%}
						<div class="media mt-3">
							<div class="media-body">
                              <h4 class="media-heading user_name mt-5 mb-5">No Comments  for this product</h4>
                              </div>
                        </div>
					{% endif%}
                          
                   </div>
					</div>
					
				</div>
			
			</div>
			</form>
		</div>
	</div>
{% endblock %}